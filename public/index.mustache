    <div class="container" id="list-greves">

        {{#greves}}
        <div class="card">
            <div class="card-firstRow">
                <h2> {{description}} </h2> <i class="fa needsAdmin" onclick="openPopUp('edit', '{{id}}')"> &#xf040; </i>
                <i class="fa needsAdmin" onclick="deleteStrike('{{id}}')"> &#x2715 </i>
